extends layout
block content
  .w3-container.w3-margin
    h1 Gestão de uma Arquivo Sonoro
    .w3-card-4
      header.w3-container.w3-teal
        h3 Novo Arquivo Sonoro
          .w3-container
            form.w3-container(action='/new' method='POST')
              label
                b Músico
              input.w3-input.w3-border(type='text' name='musico')
              label
                b Título 
              input.w3-input.w3-border(type='text' name='tit' required)
              label
                b Local 
              input.w3-input.w3-border(type='text' name='local')
              label
                b Província 
              input.w3-input.w3-border(type='text' name='prov')
              input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
        .w3-card-4
            table.w3-table-all.w3-text-black
                tr
                    th Músico
                    th Título
                    th Local
                    th Província
                    th Opções
                each a in lista
                    tr
                        td
                          a(href=`/arq/`+a.id)= a.musico
                        td
                          a(href=`/arq/`+a.id)= a.tit
                        td
                          a(href=`/arq/`+a.id)= a.local
                        td
                          a(href=`/arq/`+a.id)= a.prov
                        td 
                            button.w3-button.w3-circle.w3-blue-grey(onclick="apagaItem('" + a.id + "')") Apagar
        footer.w3-container.w3-teal
            address Gerado por Arquivo Sonoro App
                
